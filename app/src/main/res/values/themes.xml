<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Xplayer.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="myToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="background">@color/white</item>
    </style>

    <style name="BottomBorder">
        <item name="android:background">#ccc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="NavStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="Theme.Xplayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Xplayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
