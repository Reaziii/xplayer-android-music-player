<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/darkmood"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_bottom"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semebold"
            android:text="(Lofi Box) One hour bangla song dil kii doya hoy na re pagla"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_weight="1"
            android:id="@+id/songtitledxx"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="25dp"
            android:text="\uf004"
            android:textColor="@color/white"
            android:fontFamily="@font/far"
            android:layout_marginLeft="10dp"
            android:id="@+id/songheart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:id="@+id/addtoplaylistbutton"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/createplaylistwhite"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to playlists"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/montserratsemibold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:id="@+id/singlesonginfo"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/info"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Info"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/montserratsemibold"
            />

    </LinearLayout>







</LinearLayout>